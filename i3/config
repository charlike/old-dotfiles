# General Configuration
font pango:Noto Sans 11
floating_modifier $mod
hide_edge_borders both
new_window none
# smart_borders on
# gaps inner 0
# gaps outer 0

# Window-Related Bindings
bindsym $mod+Shift+q kill
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+space floating toggle
bindsym $mod+f fullscreen toggle
bindsym $mod+v layout toggle split
#bindsym $mod+h split h
bindsym $mod+space focus mode_toggle
bindsym $mod+r mode "resize "
mode "resize " {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt
    bindsym $mod+r mode "default"
    bindsym Escape mode "default"
}

# Restart-Related Bindings
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+w exec pkill X

# Program-Related Bindings
# bindsym --release Print exec imgur-screenshot
bindsym $mod+w exec google-chrome-stable
bindsym $mod+s exec subl3
bindsym $mod+e exec i3-sensible-terminal
bindsym $mod+Return exec i3-sensible-terminal
# bindsym $mod+a exec --no-startup-id i3-dmenu-desktop --dmenu="~/.config/i3/dmenu_custom.sh"
# bindsym $mod+a exec rofi -show run -lines 5 -font "Noto Sans 12"
bindsym $mod+Shift+x exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

